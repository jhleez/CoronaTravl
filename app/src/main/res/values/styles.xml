<resources>

    <!-- Base application theme. -->
    <style
        name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0A71C9CE</item>
        <item name="colorPrimaryDark">#B5CDEDEF</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 밑에꺼 순서대로 배경색 통일한 색깔이랑 상태바 글자색 검정색으로 만드는거  -->
        <!-- <item name="colorPrimary">#B5CDEDEF</item> -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/binggraemelona</item>
    </style>

    <style

        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" >


    </style>
    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/horseinjeju</item>

    </style>

</resources>
