<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="분류"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_totalsearch_hightype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/hightype"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinner_totalsearch_middletype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/middletype"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="지역"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_totalsearch_bigcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/bigcity"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinner_totalsearch_smallcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/total_middle"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <EditText
            android:id="@+id/edittext_totalsearch_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:hint="(입력)"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="검색"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_totalsearch_searchtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:entries="@array/searchtype"
            android:gravity="center" />


        <Button
            android:id="@+id/button_totalsearch_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="검색" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_totalsearch_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>