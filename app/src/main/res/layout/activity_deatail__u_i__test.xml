<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="거리 "
            android:textSize="30sp" />
        <TextView
            android:id="@+id/mask_distance_textview"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="m"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="재고 "
            android:textSize="30sp" />
        <TextView
            android:id="@+id/mask_count_textview"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="개"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="수량많음"
            android:layout_weight="1"
            android:drawableLeft="@drawable/plenty_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="수량많음"
            android:layout_weight="1"
            android:drawableLeft="@drawable/middle_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="수량많음"
            android:layout_weight="1"
            android:drawableLeft="@drawable/little_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="수량많음"
            android:layout_weight="1"
            android:drawableLeft="@drawable/none_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mask_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>